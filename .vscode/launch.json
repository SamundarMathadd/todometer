{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug WDIO Tests",
        "program": "${workspaceFolder}/node_modules/.bin/wdio",
        "args": [
          "wdio.conf.js"  // Adjust to your WDIO config file path
        ],
        "skipFiles": ["<node_internals>/**"],
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js",  // Adjust if necessary
          "${workspaceFolder}/**/*.js"
        ],
        "cwd": "${workspaceFolder}"
      }
    ]
  }
  